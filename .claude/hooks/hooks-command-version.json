{
  "description": "Spec Kit タスク進捗自動更新フック（コマンド版）",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/hooks/update-tasks.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
